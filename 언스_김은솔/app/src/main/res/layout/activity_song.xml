<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageButton
        android:id="@+id/song_setting_ib"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/btn_player_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/song_eq_ib"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/btn_player_eq_off"
        app:layout_constraintBottom_toBottomOf="@id/song_setting_ib"
        app:layout_constraintStart_toEndOf="@id/song_setting_ib"
        app:layout_constraintTop_toTopOf="@id/song_setting_ib" />

    <ImageButton
        android:id="@+id/song_down_ib"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/nugu_btn_down"
        app:layout_constraintBottom_toBottomOf="@id/song_setting_ib"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/song_more_option_ib"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/btn_player_more"
        app:layout_constraintTop_toBottomOf="@id/song_down_ib"
        app:layout_constraintEnd_toEndOf="parent" />



    <TextView
        android:id="@+id/song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textFontWeight="900"
        android:text="제목"
        android:textStyle="bold"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_marginTop="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/song_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="가수 이름"
        android:textColor="@color/black"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/song_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/song_singer_more"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/btn_main_arrow_more"
        app:layout_constraintStart_toEndOf="@id/song_singer"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/song_title" />

    <ImageView
        android:id="@+id/song_album_img"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/img_album_exp2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/song_singer" />

    <TextView
        android:id="@+id/song_lyrics_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/gray_color"
        android:text="나리는 꽃가루에"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_album_img"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/song_lyrics_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/gray_color"
        android:text="눈이 따끔해 아야"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_lyrics_one"
        android:layout_marginTop="3dp" />

    <ImageButton
        android:id="@+id/song_like_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_my_like_off"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/song_lyrics_two"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="160dp" />

    <ImageButton
        android:id="@+id/song_unlike_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="fitXY"
        android:src="@drawable/btn_player_unlike_off"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/song_lyrics_two"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="160dp" />

    <SeekBar
        android:id="@+id/song_play_bar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@null"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:progress="0"
        android:progressBackgroundTint="@color/gray_color"
        android:progressTint="@color/transparent"
        android:max="100000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/song_like_btn" />


    <TextView
        android:id="@+id/song_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3f3fff"
        android:text="00:00"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/song_play_bar"
        app:layout_constraintStart_toStartOf="@id/song_play_bar"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/song_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_color"
        android:text="00:00"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/song_play_bar"
        app:layout_constraintEnd_toEndOf="@id/song_play_bar"
        android:layout_marginTop="5dp" />

    <ImageButton
        android:id="@+id/song_play_btn"
        android:layout_width="50dp"
        android:layout_height="50sp"
        android:src="@drawable/btn_miniplayer_play"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_play_bar" />

    <ImageButton
        android:id="@+id/song_pause_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_miniplay_pause"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_play_bar"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/song_play_pre_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/btn_miniplayer_previous"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:layout_marginStart="110dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/song_play_bar" />

    <ImageButton
        android:id="@+id/song_play_next_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/btn_miniplayer_next"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:layout_marginEnd="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/song_play_bar" />


    <ImageButton
        android:id="@+id/song_repeat_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/nugu_btn_repeat_inactive"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/song_play_bar" />

    <ImageButton
        android:id="@+id/song_repeat_on_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/nugu_btn_repeat_inactive"
        android:background="@color/white"
        android:scaleType="fitXY"
        app:tint="#3f3fff"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/song_play_bar"
        android:visibility="invisible"/>


    <ImageButton
        android:id="@+id/song_random_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/nugu_btn_random_inactive"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/song_play_bar" />

    <ImageButton
        android:id="@+id/song_random_on_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/nugu_btn_random_inactive"
        android:background="@color/white"
        android:scaleType="fitXY"
        app:tint="#3f3fff"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/song_play_bar"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/song_related_btn"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:src="@drawable/btn_player_related"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/song_play_next_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/song_instargram_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_actionbar_instagram"
        android:background="@color/white"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/song_play_next_btn" />

    <ImageButton
        android:id="@+id/song_list_more_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_miniplayer_go_list"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/song_play_next_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>