<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/song_setting_iv"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/btn_player_setting"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/song_eq_off_iv"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/btn_player_eq_off"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/song_setting_iv"
        app:layout_constraintTop_toTopOf="@id/song_setting_iv"/>

    <ImageView
        android:id="@+id/song_btn_down_iv"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/nugu_btn_down"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/song_btn_more_iv"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/btn_player_more"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/song_btn_down_iv"
        app:layout_constraintStart_toStartOf="@id/song_btn_down_iv"/>

    <ImageView
        android:id="@+id/song_img_album_iv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/img_album_exp2"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/song_txt_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toTopOf="@id/song_img_album_iv"
        app:layout_constraintStart_toStartOf="@id/song_img_album_iv"
        app:layout_constraintEnd_toEndOf="@id/song_img_album_iv"/>

    <TextView
        android:id="@+id/song_txt_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가수 이름"
        android:textSize="13dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/song_txt_title_tv"
        app:layout_constraintBottom_toTopOf="@id/song_img_album_iv"
        app:layout_constraintStart_toStartOf="@id/song_img_album_iv"
        app:layout_constraintEnd_toEndOf="@id/song_img_album_iv"/>

    <ImageView
        android:id="@+id/song_btn_arrow_more_iv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/btn_main_arrow_more"
        app:layout_constraintStart_toEndOf="@id/song_txt_singer_tv"
        app:layout_constraintTop_toTopOf="@id/song_txt_singer_tv"
        app:layout_constraintBottom_toBottomOf="@id/song_txt_singer_tv"/>

    <ImageView
        android:id="@+id/song_img_related_iv"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_related"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/song_instagram_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_actionbar_instagram"
        android:layout_marginEnd="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/song_img_related_iv"
        app:layout_constraintTop_toTopOf="@id/song_img_related_iv"
        app:layout_constraintBottom_toBottomOf="@id/song_img_related_iv"/>

    <ImageView
        android:id="@+id/song_go_list_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_go_list"
        android:layout_marginStart="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/song_img_related_iv"
        app:layout_constraintTop_toTopOf="@id/song_img_related_iv"
        app:layout_constraintBottom_toBottomOf="@id/song_img_related_iv"/>


        <ImageView
            android:id="@+id/song_btn_repeat_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/nugu_btn_repeat_inactive"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toBottomOf="@id/song_progress_sb"
            app:layout_constraintBottom_toBottomOf="@id/song_instagram_iv"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageView
            android:id="@+id/song_btn_skip_previous_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/nugu_btn_skip_previous_32"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@id/song_btn_repeat_iv"
            app:layout_constraintTop_toTopOf="@id/song_btn_repeat_iv"
            app:layout_constraintBottom_toBottomOf="@id/song_btn_repeat_iv"/>

        <ImageView
            android:id="@+id/song_btn_start_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_player_play"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintStart_toStartOf="@id/song_btn_skip_previous_iv"
            app:layout_constraintEnd_toEndOf="@id/song_btn_skip_next_iv"
            app:layout_constraintTop_toTopOf="@id/song_btn_repeat_iv"
            app:layout_constraintBottom_toBottomOf="@id/song_btn_repeat_iv"/>

        <ImageView
            android:id="@+id/song_btn_pause_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/nugu_btn_pause_32"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintStart_toStartOf="@id/song_btn_skip_previous_iv"
            app:layout_constraintEnd_toEndOf="@id/song_btn_skip_next_iv"
            app:layout_constraintTop_toTopOf="@id/song_btn_repeat_iv"
            app:layout_constraintBottom_toBottomOf="@id/song_btn_repeat_iv"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/song_btn_skip_next_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/nugu_btn_skip_next_32"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toStartOf="@id/song_btn_random_iv"
            app:layout_constraintTop_toTopOf="@id/song_btn_repeat_iv"
            app:layout_constraintBottom_toBottomOf="@id/song_btn_repeat_iv" />

        <ImageView
            android:id="@+id/song_btn_random_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/nugu_btn_random_inactive"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toTopOf="@id/song_btn_repeat_iv"
            app:layout_constraintBottom_toBottomOf="@id/song_btn_repeat_iv"
            app:layout_constraintEnd_toEndOf="parent"
            />

    <TextView
        android:id="@+id/song_lyrics_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나라는 꽃가루에\n눈이 따끔해 아야"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/song_img_album_iv"
        app:layout_constraintEnd_toEndOf="@id/song_img_album_iv"
        app:layout_constraintTop_toBottomOf="@id/song_img_album_iv"
        />

<!--    <View-->
<!--        android:id="@+id/song_bar_v"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="3dp"-->
<!--        android:background="@color/gray_color"-->
<!--        android:layout_marginStart="20dp"-->
<!--        android:layout_marginEnd="20dp"-->
<!--        android:layout_marginBottom="20dp"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@id/song_img_album_iv"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"/>-->

    <SeekBar
        android:id="@+id/song_progress_sb"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@null"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:progress="0"
        android:progressBackgroundTint="@color/gray_color"
        android:progressTint="@color/select_color"
        android:thumb="@color/transparent"
        android:max="100000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_img_album_iv" />

    <TextView
        android:id="@+id/song_bar_where_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="00:08"
        android:textStyle="bold"
        android:textColor="@color/select_color"
        app:layout_constraintStart_toStartOf="@id/song_progress_sb"
        app:layout_constraintTop_toBottomOf="@id/song_progress_sb"/>

    <TextView
        android:id="@+id/song_bar_full_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="01:00"
        android:textStyle="bold"
        android:textColor="@color/gray_color"
        app:layout_constraintEnd_toEndOf="@id/song_progress_sb"
        app:layout_constraintTop_toBottomOf="@id/song_progress_sb"
        />

    <ImageView
        android:id="@+id/song_btn_like_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_my_like_off"
        android:layout_marginStart="90dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/song_btn_unlike_iv"
        app:layout_constraintTop_toBottomOf="@id/song_lyrics_tv"
        app:layout_constraintBottom_toTopOf="@id/song_progress_sb"/>

    <ImageView
        android:id="@+id/song_btn_unlike_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/btn_player_unlike_off"
        android:layout_marginEnd="90dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@id/song_btn_like_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_lyrics_tv"
        app:layout_constraintBottom_toTopOf="@id/song_progress_sb"/>

</androidx.constraintlayout.widget.ConstraintLayout>