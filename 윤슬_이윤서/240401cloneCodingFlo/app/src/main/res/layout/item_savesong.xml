<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_ss_album_cover_img_cardView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/item_ss_album_cover_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_album_exp2"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_ss_album_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/item_ss_album_cover_img_cardView"
        app:layout_constraintStart_toEndOf="@id/item_ss_album_cover_img_cardView"
        />
    <TextView
        android:id="@+id/item_ss_album_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가수"
        android:textSize="15dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="@id/item_ss_album_title_tv"
        app:layout_constraintStart_toStartOf="@id/item_ss_album_title_tv"
        />

    <ImageView
        android:id="@+id/item_ss_more_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_more"
        app:layout_constraintTop_toTopOf="@id/item_ss_album_cover_img_cardView"
        app:layout_constraintBottom_toBottomOf="@id/item_ss_album_cover_img_cardView"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_miniplay_mvplay"
        app:layout_constraintTop_toTopOf="@id/item_ss_album_cover_img_cardView"
        app:layout_constraintBottom_toBottomOf="@id/item_ss_album_cover_img_cardView"
        app:layout_constraintEnd_toStartOf="@id/item_ss_more_iv"
        />

</androidx.constraintlayout.widget.ConstraintLayout>