<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/album_back_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/btn_arrow_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/album_like_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_my_like_off"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@+id/album_more_iv"
        app:layout_constraintTop_toTopOf="@id/album_more_iv"
        app:layout_constraintBottom_toBottomOf="@id/album_more_iv"/>

    <ImageView
        android:id="@+id/album_more_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/btn_player_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/album_beenzino_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/beenzino_1st_album_aquaman"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_back_iv">



    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/album_music_singer_tv"
        android:layout_marginTop="3dp"
        android:text="@string/beenzino"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/album_beenzino_tv"
        app:layout_constraintStart_toStartOf="@id/album_beenzino_tv"
        app:layout_constraintTop_toBottomOf="@id/album_beenzino_tv">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/album_beenzino_info_tv"
        android:layout_marginTop="3dp"
        android:text="@string/_2012_07_03"
        app:layout_constraintEnd_toEndOf="@id/album_music_singer_tv"
        app:layout_constraintStart_toStartOf="@id/album_music_singer_tv"
        app:layout_constraintTop_toBottomOf="@id/album_music_singer_tv">


    </TextView>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/aquaman"
        android:id="@+id/album_beenzino_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/album_beenzino_info_tv"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/album_content_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorFullWidth="false"
        app:tabSelectedTextColor="#3f3fff"
        app:tabIndicatorColor="#3f3fff"
        app:tabRippleColor="#00ff0000"
        app:layout_constraintEnd_toEndOf="@id/album_beenzino_iv"
        app:layout_constraintStart_toStartOf="@id/album_beenzino_iv"
        app:layout_constraintTop_toBottomOf="@id/album_beenzino_iv"/>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/album_content_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_content_tb" />


</androidx.constraintlayout.widget.ConstraintLayout>