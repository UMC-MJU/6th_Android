<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/detail_albumname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="앨범명"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/detail_artistalbumname_tv"/>


            <TextView
                android:id="@+id/detail_artistalbumname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="앨범명"
                android:textSize="15sp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toEndOf="@id/detail_albumname_tv"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/detail_albumartist_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아티스트"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/detail_albumname_tv"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/detail_artist_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아티스트이름"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/detail_artistalbumname_tv"
                app:layout_constraintStart_toStartOf="@id/detail_artistalbumname_tv"/>

            <TextView
                android:id="@+id/detail_albumfrom_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유통사"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/detail_albumartist_tv"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/detail_from_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유동사"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/detail_artist_tv"
                app:layout_constraintStart_toStartOf="@id/detail_artist_tv"/>

            <TextView
                android:id="@+id/detail_agency_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기획사"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/detail_from_tv"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/detail_com_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기획사"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/detail_from_tv"
                app:layout_constraintStart_toStartOf="@id/detail_from_tv"/>


            <TextView
                android:id="@+id/detail_albuminfo_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="앨범정보"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/detail_agency_tv"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/detail_album_info_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:lineSpacingExtra="3dp"
                android:text="@string/detail_album_info"
                android:textAlignment="textStart"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_albuminfo_tv" />




        </androidx.constraintlayout.widget.ConstraintLayout>






    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>