                        android:textSize="15sp"
                        android:layout_marginStart="5dp"
                        app:layout_constraintStart_toEndOf="@id/song_list_title_02_tv"
                        app:layout_constraintTop_toTopOf="@id/music_list_order3_tv"
                        app:layout_constraintBottom_toBottomOf="@id/music_list_order3_tv">
                    </TextView>

                    <TextView
                        android:id="@+id/music_list_singer3_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가수"
                        android:textSize="10sp"
                        android:textColor="@color/grey"
                        app:layout_constraintTop_toBottomOf="@id/song_list_title_02_tv"
                        app:layout_constraintStart_toStartOf="@id/song_list_title_02_tv">
                    </TextView>

                    <ImageView
