<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/album_back_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/btn_arrow_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/album_like_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_my_like_off"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@+id/album_more_iv"
        app:layout_constraintTop_toTopOf="@id/album_more_iv"
        app:layout_constraintBottom_toBottomOf="@id/album_more_iv"/>

    <ImageView
        android:id="@+id/album_more_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/btn_player_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/album_beenzino_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/beenzino_1st_album_aquaman"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_back_iv">



    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/album_music_singer_tv"
        android:layout_marginTop="3dp"
        android:text="@string/beenzino"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/album_beenzino_tv"
        app:layout_constraintStart_toStartOf="@id/album_beenzino_tv"
        app:layout_constraintTop_toBottomOf="@id/album_beenzino_tv">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/album_beenzino_info_tv"
        android:layout_marginTop="3dp"
        android:text="@string/_2012_07_03"
        app:layout_constraintEnd_toEndOf="@id/album_music_singer_tv"
        app:layout_constraintStart_toStartOf="@id/album_music_singer_tv"
        app:layout_constraintTop_toBottomOf="@id/album_music_singer_tv">


    </TextView>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/aquaman"
        android:id="@+id/album_beenzino_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/album_beenzino_info_tv"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/album_linear"
        app:layout_constraintTop_toBottomOf="@id/album_beenzino_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수록곡"
            android:textColor="@color/purple_700">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세정보"
            android:layout_marginStart="100dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="영상">
        </TextView>
    </LinearLayout>

    <View
        android:id="@+id/linearView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#A5A4A4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_linear">

    </View>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/album_linear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/album_mix_linear"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/album_mix_tv"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="내 취향 MIX">


                </TextView>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:id="@+id/album_mix_off_iv"
                    android:src="@drawable/btn_toggle_off">

                </ImageView>



            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/album_select_all_iv"
                android:src="@drawable/btn_playlist_select_off"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/album_mix_linear">


            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/album_select_all_tv"
                android:text="전체선택"
                android:layout_marginStart="5dp"
                app:layout_constraintBottom_toBottomOf="@id/album_select_all_iv"
                app:layout_constraintStart_toEndOf="@id/album_select_all_iv"
                app:layout_constraintTop_toTopOf="@id/album_select_all_iv">


            </TextView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/album_listen_all_iv"
                android:src="@drawable/icon_browse_arrow_right"
                android:layout_marginEnd="5dp"
                app:layout_constraintEnd_toStartOf="@id/album_listen_all_tv"
                app:layout_constraintTop_toTopOf="@id/album_listen_all_tv"
                app:layout_constraintBottom_toBottomOf="@id/album_listen_all_tv">


            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/album_listen_all_tv"
                android:text="전체듣기"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/album_select_all_tv"
                app:layout_constraintTop_toTopOf="@id/album_select_all_tv"
                android:layout_marginEnd="10dp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/album_list_linear"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/album_select_all_tv">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/song1_layout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/music_list_order1_tv"
                        android:text="01"
                        android:textSize="13sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/music_list_title1_tv"
                        android:text="제목1"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        app:layout_constraintStart_toEndOf="@id/music_list_order1_tv"
                        app:layout_constraintTop_toTopOf="@id/music_list_order1_tv"
                        app:layout_constraintBottom_toBottomOf="@id/music_list_order1_tv">


                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/music_list_singer1_tv"
                        android:text="가수1"
                        android:textSize="10sp"
                        app:layout_constraintTop_toBottomOf="@id/music_list_title1_tv"
                        app:layout_constraintStart_toStartOf="@id/music_list_title1_tv">

                    </TextView>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/music_list_play1_iv"
                        android:src="@drawable/btn_miniplayer_play"
                        app:layout_constraintTop_toTopOf="@id/music_list_more1_iv"
                        app:layout_constraintEnd_toStartOf="@id/music_list_more1_iv"
                        app:layout_constraintBottom_toBottomOf="@id/music_list_more1_iv">

                    </ImageView>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/music_list_more1_iv"
                        android:src="@drawable/btn_player_more"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/music_list_singer1_tv"
                        app:layout_constraintTop_toTopOf="@id/music_list_title1_tv">

                    </ImageView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/song2_layout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/music_list_order2_tv"
                        android:text="02"
                        android:textSize="13sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/music_list_title2_tv"
                        android:text="제목2"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        app:layout_constraintStart_toEndOf="@id/music_list_order2_tv"
                        app:layout_constraintTop_toTopOf="@id/music_list_order2_tv"
                        app:layout_constraintBottom_toBottomOf="@id/music_list_order2_tv">


                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/music_list_singer2_tv"
                        android:text="가수2"
                        android:textSize="10sp"
                        app:layout_constraintTop_toBottomOf="@id/music_list_title2_tv"
                        app:layout_constraintStart_toStartOf="@id/music_list_title2_tv">

                    </TextView>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/music_list_play2_iv"
                        android:src="@drawable/btn_miniplayer_play"
                        app:layout_constraintTop_toTopOf="@id/music_list_more2_iv"
                        app:layout_constraintEnd_toStartOf="@id/music_list_more2_iv"
                        app:layout_constraintBottom_toBottomOf="@id/music_list_more2_iv">

                    </ImageView>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/music_list_more2_iv"
                        android:src="@drawable/btn_player_more"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/music_list_singer2_tv"
                        app:layout_constraintTop_toTopOf="@id/music_list_title2_tv">

                    </ImageView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/song3_layout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/music_list_order3_tv"
                        android:text="03"
                        android:textSize="13sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/music_list_title3_tv"
                        android:text="제목3"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        app:layout_constraintStart_toEndOf="@id/music_list_order3_tv"
                        app:layout_constraintTop_toTopOf="@id/music_list_order3_tv"
                        app:layout_constraintBottom_toBottomOf="@id/music_list_order3_tv">


                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/music_list_singer3_tv"
                        android:text="가수3"
                        android:textSize="10sp"
                        app:layout_constraintTop_toBottomOf="@id/music_list_title3_tv"
                        app:layout_constraintStart_toStartOf="@id/music_list_title3_tv">

                    </TextView>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/music_list_play3_iv"
                        android:src="@drawable/btn_miniplayer_play"
                        app:layout_constraintTop_toTopOf="@id/music_list_more3_iv"
                        app:layout_constraintEnd_toStartOf="@id/music_list_more3_iv"
                        app:layout_constraintBottom_toBottomOf="@id/music_list_more3_iv">

                    </ImageView>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/music_list_more3_iv"
                        android:src="@drawable/btn_player_more"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/music_list_singer3_tv"
                        app:layout_constraintTop_toTopOf="@id/music_list_title3_tv">

                    </ImageView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/song4_layout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/music_list_order4_tv"
                        android:text="04"
                        android:textSize="13sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/music_list_title4_tv"
                        android:text="제목4"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        app:layout_constraintStart_toEndOf="@id/music_list_order4_tv"
                        app:layout_constraintTop_toTopOf="@id/music_list_order4_tv"
                        app:layout_constraintBottom_toBottomOf="@id/music_list_order4_tv">


                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/music_list_singer4_tv"
                        android:text="가수4"
                        android:textSize="10sp"
                        app:layout_constraintTop_toBottomOf="@id/music_list_title4_tv"
                        app:layout_constraintStart_toStartOf="@id/music_list_title4_tv">

                    </TextView>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/music_list_play4_iv"
                        android:src="@drawable/btn_miniplayer_play"
                        app:layout_constraintTop_toTopOf="@id/music_list_more4_iv"
                        app:layout_constraintEnd_toStartOf="@id/music_list_more4_iv"
                        app:layout_constraintBottom_toBottomOf="@id/music_list_more4_iv">

                    </ImageView>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/music_list_more4_iv"
                        android:src="@drawable/btn_player_more"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/music_list_singer4_tv"
                        app:layout_constraintTop_toTopOf="@id/music_list_title4_tv">

                    </ImageView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/song5_layout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/music_list_order5_tv"
                        android:text="05"
                        android:textSize="13sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/music_list_title5_tv"
                        android:text="제목5"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        app:layout_constraintStart_toEndOf="@id/music_list_order5_tv"
                        app:layout_constraintTop_toTopOf="@id/music_list_order5_tv"
                        app:layout_constraintBottom_toBottomOf="@id/music_list_order5_tv">


                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/music_list_singer5_tv"
                        android:text="가수5"
                        android:textSize="10sp"
                        app:layout_constraintTop_toBottomOf="@id/music_list_title5_tv"
                        app:layout_constraintStart_toStartOf="@id/music_list_title5_tv">

                    </TextView>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/music_list_play5_iv"
                        android:src="@drawable/btn_miniplayer_play"
                        app:layout_constraintTop_toTopOf="@id/music_list_more5_iv"
                        app:layout_constraintEnd_toStartOf="@id/music_list_more5_iv"
                        app:layout_constraintBottom_toBottomOf="@id/music_list_more5_iv">

                    </ImageView>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/music_list_more5_iv"
                        android:src="@drawable/btn_player_more"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/music_list_singer5_tv"
                        app:layout_constraintTop_toTopOf="@id/music_list_title5_tv">

                    </ImageView>

                </androidx.constraintlayout.widget.ConstraintLayout>




            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>















    </androidx.core.widget.NestedScrollView>








</androidx.constraintlayout.widget.ConstraintLayout>