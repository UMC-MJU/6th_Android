<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/locker_album_img_cardview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp">
        <ImageView
            android:id="@+id/locker_album_img_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_album_exp2"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/locker_album_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LILAC"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/locker_album_img_cardview"
        app:layout_constraintStart_toEndOf="@id/locker_album_img_cardview"
        android:layout_marginStart="8dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/locker_album_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유 (IU)"
        android:textSize="18sp"
        android:textColor="@color/grey"
        app:layout_constraintBottom_toBottomOf="@id/locker_album_img_cardview"
        app:layout_constraintTop_toBottomOf="@id/locker_album_title_tv"
        app:layout_constraintStart_toEndOf="@id/locker_album_img_cardview"
        android:layout_marginStart="8dp"/>

    <Switch
        android:id="@+id/switchUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:switchMinWidth="50dp"
        android:switchPadding="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/locker_album_play_iv">
    </Switch>

    <ImageView
        android:id="@+id/locker_album_play_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/nugu_btn_play_32"
        app:layout_constraintBottom_toBottomOf="@id/locker_album_singer_tv"
        app:layout_constraintTop_toTopOf="@id/locker_album_title_tv"
        app:layout_constraintEnd_toStartOf="@id/locker_album_more_iv"/>

    <ImageView
        android:id="@+id/locker_album_more_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/locker_album_play_iv"
        app:layout_constraintBottom_toBottomOf="@id/locker_album_play_iv"
        android:src="@drawable/btn_player_more"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>