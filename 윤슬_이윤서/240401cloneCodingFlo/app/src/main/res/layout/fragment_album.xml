<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/album_btn_more_iv"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/btn_player_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/album_btn_like_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_my_like_off"
        app:layout_constraintBottom_toBottomOf="@id/album_btn_more_iv"
        app:layout_constraintEnd_toStartOf="@id/album_btn_more_iv"
        app:layout_constraintTop_toTopOf="@id/album_btn_more_iv" />

    <ImageView
        android:id="@+id/album_btn_back_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/btn_arrow_black"
        app:layout_constraintBottom_toBottomOf="@id/album_btn_more_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/album_btn_more_iv" />

    <ImageView
        android:id="@+id/album_img_album_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="200dp"
        android:src="@drawable/img_album_exp2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="170dp"
        android:layout_marginStart="-8dp"
        android:src="@drawable/img_album_lp"
        app:layout_constraintBottom_toBottomOf="@id/album_img_album_iv"
        app:layout_constraintStart_toEndOf="@id/album_img_album_iv"
        app:layout_constraintTop_toTopOf="@id/album_img_album_iv" />

    <TextView
        android:id="@+id/album_top_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="IU 5th Album 'LILAC'"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/album_top_singer_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_btn_like_iv" />

    <TextView
        android:id="@+id/album_top_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가수"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@id/album_top_inform_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_top_title_tv" />

    <TextView
        android:id="@+id/album_top_inform_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021.03.25 | 정규 | 댄스 팝"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@id/album_img_album_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_top_singer_tv" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/album_content_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/album_img_album_iv"
        app:layout_constraintStart_toStartOf="@id/album_img_album_iv"
        app:layout_constraintTop_toBottomOf="@id/album_img_album_iv"
        app:tabIndicatorColor="#3f3fff"
        app:tabIndicatorFullWidth="false"
        app:tabRippleColor="#00ff0000"
        app:tabSelectedTextColor="#3f3fff" />




    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/album_content_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_content_tb" />


</androidx.constraintlayout.widget.ConstraintLayout>