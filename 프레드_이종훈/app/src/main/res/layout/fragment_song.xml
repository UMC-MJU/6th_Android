<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/album_mix_linear"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/album_mix_tv"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="내 취향 MIX">


                </TextView>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:id="@+id/album_mix_off_iv"
                    android:src="@drawable/btn_toggle_off">

                </ImageView>



            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/album_select_all_iv"
                android:src="@drawable/btn_playlist_select_off"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/album_mix_linear">


            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/album_select_all_tv"
                android:text="전체선택"
                android:layout_marginStart="5dp"
                app:layout_constraintBottom_toBottomOf="@id/album_select_all_iv"
                app:layout_constraintStart_toEndOf="@id/album_select_all_iv"
                app:layout_constraintTop_toTopOf="@id/album_select_all_iv">


            </TextView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/album_listen_all_iv"
                android:src="@drawable/icon_browse_arrow_right"
                android:layout_marginEnd="5dp"
                app:layout_constraintEnd_toStartOf="@id/album_listen_all_tv"
                app:layout_constraintTop_toTopOf="@id/album_listen_all_tv"
                app:layout_constraintBottom_toBottomOf="@id/album_listen_all_tv">


            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/album_listen_all_tv"
                android:text="전체듣기"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/album_select_all_tv"
                app:layout_constraintTop_toTopOf="@id/album_select_all_tv"
                android:layout_marginEnd="10dp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/album_list_linear"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/album_select_all_tv">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/song1_layout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/music_list_order1_tv"
                        android:text="01"
                        android:textSize="13sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/music_list_title1_tv"
                        android:text="제목1"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        app:layout_constraintStart_toEndOf="@id/music_list_order1_tv"
                        app:layout_constraintTop_toTopOf="@id/music_list_order1_tv"
                        app:layout_constraintBottom_toBottomOf="@id/music_list_order1_tv">


                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/music_list_singer1_tv"
                        android:text="가수1"
                        android:textSize="10sp"
                        app:layout_constraintTop_toBottomOf="@id/music_list_title1_tv"
                        app:layout_constraintStart_toStartOf="@id/music_list_title1_tv">

                    </TextView>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/music_list_play1_iv"
                        android:src="@drawable/btn_miniplayer_play"
                        app:layout_constraintTop_toTopOf="@id/music_list_more1_iv"
                        app:layout_constraintEnd_toStartOf="@id/music_list_more1_iv"
                        app:layout_constraintBottom_toBottomOf="@id/music_list_more1_iv">

                    </ImageView>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/music_list_more1_iv"
                        android:src="@drawable/btn_player_more"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/music_list_singer1_tv"
                        app:layout_constraintTop_toTopOf="@id/music_list_title1_tv">

                    </ImageView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/song2_layout">

